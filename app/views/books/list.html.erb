<div class="container">
  <div class="row">
      <div class="col-sm-4" >
          <%= image_tag 'hitoshi_abe'%>
      </div>
      <div class="col-sm-4" >
          <%= image_tag 'jutaku'%>
      </div>
      <div class="col-sm-4" >
          <%= image_tag 'new_architecture_in_japan'%>
      </div>
  </div>
  <div class="row">
      <div class="col-sm-4" >
          <%= image_tag 'shigeru_ban'%>
      </div>
      <div class="col-sm-4" >
          <%= image_tag 'sou_fujimoto'%>
      </div>
      <div class="col-sm-4" >
          <%= image_tag 'made_in_japan'%>
      </div>
  </div>
</div>
<div class="container">

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                  Year
                </th>
                <th>
                    Title
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>

        <tbody>
            <% @books.each do |book| %>
            <tr>

                <td>
                    <%= book.year %>
                </td>

                <td>
                    <a href=<%=book.link%> ><%= book.title %></a>
                </td>
                <td>
                  $  <%= book.price%>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
